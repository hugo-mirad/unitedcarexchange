<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#444444" >

        <TextView
            android:id="@+id/show_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/uploadback_button1"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/uploadback_button1"
            android:background="#444444"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <Button
            android:id="@+id/uploadback_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show_content"
            android:layout_alignBottom="@+id/show_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
            android:background="@drawable/back_small" />

        <Button
            android:id="@+id/btn_photouploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show_content"
            android:layout_alignBottom="@+id/show_content"
            android:layout_alignParentBottom="true"
              android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/save_small" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_uploadphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageView
        android:id="@+id/testimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_uploadphoto"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>