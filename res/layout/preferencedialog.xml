<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/preferencedialog_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="75dp"
        android:text="Edit Preference" />

    <Button
        android:id="@+id/preferencedialog_viewcars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/preferencedialog_edit"
        android:layout_alignBottom="@+id/preferencedialog_edit"
        android:layout_marginLeft="5dp"
        
        android:layout_toRightOf="@+id/preferencedialog_edit"
        android:text="View Cars"
        android:visibility="invisible" />
    

    <TextView
        android:id="@+id/tv_preferencedialog_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/preferencedialog_viewcars"
        android:layout_alignLeft="@+id/preferencedialog_edit"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="22dp"
        android:text="TextView" />

