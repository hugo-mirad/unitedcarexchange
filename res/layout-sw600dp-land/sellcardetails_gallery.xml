<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#444" >

        <TextView
            android:id="@+id/tv_sellergallerycars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/sellcargallery_button1"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/sellcargallery_button1"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="26dp" />

        <Button
            android:id="@+id/sellcargallery_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/back_big" />
    </RelativeLayout>

    <Gallery
        android:id="@+id/viewGaleery"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="70dp" />

    <ImageView
        android:id="@+id/left_arrow_imageview"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/arrow_left_disabled" />

    <ImageView
        android:id="@+id/right_arrow_imageview"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/left_arrow_imageview"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_right_enabled" />

    <!--
         <TextView
        android:id="@+id/tv_sellergallerycars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="28dp" />
    -->

    <TextView
        android:id="@+id/tv_gallerycarno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:text=""
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

</RelativeLayout>