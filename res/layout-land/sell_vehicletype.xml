<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sellvehicletype_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:text="Make:"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/et_sellvehicletype_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sellvehicletype_make"
        android:layout_alignBottom="@+id/sellvehicletype_make"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@+id/sellvehicletype_make"
        android:focusableInTouchMode="false"
        android:textColor="#FFFFFF" >
    </TextView>

    <TextView
        android:id="@+id/sellvehicletype_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sellvehicletype_make"
        android:layout_below="@+id/sellvehicletype_make"
        android:layout_marginTop="30dp"
        android:text="Model:"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/et_sellvehicletype_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sellvehicletype_model"
        android:layout_alignBottom="@+id/sellvehicletype_model"
        android:layout_marginLeft="38dp"
        android:layout_toRightOf="@+id/sellvehicletype_model"
        android:focusableInTouchMode="false"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/sellvehicletype_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sellvehicletype_model"
        android:layout_below="@+id/sellvehicletype_model"
        android:layout_marginTop="30dp"
        android:text="Year:"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/et_sellvehicletype_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sellvehicletype_year"
        android:layout_alignBottom="@+id/sellvehicletype_year"
        android:layout_marginLeft="46dp"
        android:layout_toRightOf="@+id/sellvehicletype_year"
        android:focusableInTouchMode="false"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_sellvehicletype_bodystyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sellvehicletype_year"
        android:layout_below="@+id/sellvehicletype_year"
        android:layout_marginTop="30dp"
        android:text="Body Style:"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/sp_sellvehicletype_bodystyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_sellvehicletype_bodystyle"
        android:layout_alignBottom="@+id/tv_sellvehicletype_bodystyle"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tv_sellvehicletype_bodystyle"
        android:clickable="false" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#444444" >

        <Button
            android:id="@+id/btn_sellcarvehicleedit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_small" />

        <Button
            android:id="@+id/btn_sellcarvehicleedit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cancel_small"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_sellcarvehicle_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/save_small"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_sellcarvehicle_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_small"
            android:textColor="#FFFFFF" />

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_sellcarvehicletype_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sellcarvehicletype_make"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLength="8"
                    android:text="make"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sellcarvehicletype_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLength="8"
                    android:text="model"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sellvehicletype_bodystyle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="42dp"
        android:text="@string/note_vehicle"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:textStyle="italic" />

</RelativeLayout>